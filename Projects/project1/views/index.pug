doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Api Home
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
  link(rel='stylesheet' href='styles.css')
.card
  .card-body(align='center')
    #shutBall
      img#logo(src='closedBall.png' alt='pokeball')
    h5.card-title(align='center') Choose a pokemon, or enter your own!
    p(align='center')
    #buttons(align='center')
      a.btn.btn-primary(href='/gible') Gible
      a.btn.btn-primary(href='/cubone') Cubone
      a.btn.btn-primary(href='/pikachu') Pikachu
      a.btn.btn-primary(href='/squirtle') Squirtle
    #search.topnav(align='center')
      form(onsubmit='searchFunction(); return false')
        input#searchBar(type='text' placeholder='Search...')
        button#submit(type='button') Submit
  script(src='pokemon.js')